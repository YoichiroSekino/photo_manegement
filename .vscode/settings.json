{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "typescript.tsdk": "frontend/node_modules/typescript/lib",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/venv/bin/python",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.rulers": [88],
    "editor.tabSize": 4
  },
  "[typescript]": {
    "editor.rulers": [100],
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.rulers": [100],
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.rulers": [100],
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.next": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/venv": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true
  }
}
